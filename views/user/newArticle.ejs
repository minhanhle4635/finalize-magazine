<h1>Create new Article</h1>
<form action="/user/newarticle" method="POST" enctype="multipart/form-data">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required>
    </div>
    <div>
        <label for="author">Author</label>
        <input type="text" name="author">
    </div>
    <div>
        <label for="description">Description</label>
        <textarea name="description"></textarea>
    </div>
    <div>
        <label for="topic">Topic</label>
        <select name="topic">
            <% topics.forEach(topic=> { %>
                <option label="<%= topic.name %>" value="<%= topic._id %>">
                    <% }) %>
        </select>
    </div>
    <div>
        <label>Cover</label>
        <input type="file" name="cover" class="filepond">
    </div>
    <div>
        <label for="file">File</label>
        <input type="file" name="file" required>
    </div>

    <div>
        <input type="checkbox" id="isTermAccepted" name="isTermAccepted" />
        <label for="isTermAccepted"> Accept term</label><br>

    </div>
    <button type="submit">Add</button>
</form>
<a href="/user">Cancel</a>