<section>
    <form class="p-5 ">
        <h2>Job status</h2>
        <table class="table p-5 border">
            <thead class="strong">
                <tr>
                    <td>Total Faculties:</td>
                    <td>Total Topics:</td>
                    <td>Total Articles: </td>
                    <td>Pending Articles:</td>
                    <td>Rejected Articles:</td>
                    <td>Accepted Articles:</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= allFaculties %> 
                    </td>
                    <td>
                        <%= allTopics %> 
                    </td>
                    <td>
                        <%= allArticles %>
                    </td>
                    <td>
                        <%= pendingArticles %>
                    </td>
                    <td>
                        <%= rejectedArticles %>
                    </td>
                    <td>
                        <%= acceptedArticles %>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</section>

<section class="centered-search">
    <h3>Search Faculty</h3>
    <form action="/manager" method="GET">
        <div class="search-css">
            <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
        <button class="btn btn-full" type="submit">Search</button>
        <a class="btn btn-full" href="/manager">Refresh</a>
    </form>
</section>

<section class="section-rewards">
    <div class="row">
        <h2>FALCUTIES</h2>
    </div>
    
    <div class="row">
        <% faculty.forEach(faculty =>{ %>
            <div class="col-cat span-1-of-3">
                <div class="catergories-box">
                    <div>
                        <p class="catergories">
                            <a class="btn btn-ghost" href="/manager/faculty/<%= faculty._id %>"><%= faculty.name %></a>
                        </p>
                    </div>           
                </div>
            </div> 
            <% }) %>     
    </div>
</section>

