<section>
    
<div class="tp-info">
    <h2>Topic: <%= topic.name %></h2>
    <h3>Expired Date: <%= topic.expiredDate.toISOString().split('T')[0] %></h3>
    <h4>Description: <%= topic.description %></h4>
</div>

<div>
    <table class="content-table">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Name</th>
                <th>Author</th>
            </tr>
        </thead>
        <% articles.forEach(article => { %>
            <tbody>
                <tr>
                    <td><img height="150" width="100" src="<%= article.coverImagePath %>"></td>
                    <td><a href="/manager/article/<%= article.id %>"><%= article.name %></a></td>
                    <td><%= article.author %></td>
                </tr>
            </tbody>
        <% }) %> 
    </table>

</div>
</section>

<footer>
    <div class="row">
        <div class="col span-1-of-2">
