<%- include('../partials/errorMessage.ejs') %>
<div class="row">
    <form action="/admin/user/<%= user._id %>/edit?_method=PUT" method="POST" class="signup-form">
        <div class="log-border">
            <h2> Edit User </h2>
            <div class="row">
                <div class="col span-1-of-3">
                    <label for="">Name</label>
                </div>
                <div class="col span-2-of-3">
                    <%= user.name %>
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3">
                    <label for="">New role: </label>
                </div>
                <div class="col span-2-of-3">
                    <select name="role">
                        <option value="admin">Admin</option>
                        <option value="coordinator">Coordinator</option>
                        <option value="student">Student</option>
                        <option value="user">Manager</option>
                        <option value="guest">Guest</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3">
                    <label for="faculty">Faculty</label>
                </div>
                <div class="col span-2-of-3">
                    <select name="faculty">
                        <% faculty.forEach(faculty => { %>
                            <option label="<%= faculty.name %>" value="<%= faculty._id %>">
                        <% }) %>
                    </select>
                </div>
            </div>
            
            <div class="row fal-add-css">
                <div class="col span-1-of-2">
                    <button class="btn btn-ghost" type="submit">Update</button>
                </div>

                <div class="col span-1-of-2">
                    <a class="btn btn-ghost" href="/admin/user/<%= user._id %>">Cancel</a>
                </div>
            </div>
        </div>
</form>
</div>