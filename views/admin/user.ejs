<!DOCTYPE html>
<html lang="en">
<body>
    <section>
        <nav class="sticky sticky-admin">
            <div class="row">
                <img src="/resources/img/logo.jpg" alt="missing picture" class="logo">
                <img src="/resources/img/logo.jpg" alt="missing picture" class="logo-black">
                    <ul class="main-nav">
                    <li> <a href="/admin/faculty">Manage falcuty </a> </li>
                    <li> <a href="/admin/logout">logout </a> </li>
                 </ul>
            </div>
        </nav>
    </section>

<h3>Search User</h3>
<a href="/admin/user/new">Add New User</a>
<form action="/admin/user" method="GET">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <button type="submit">Search</button>
</form>

<div>
    <% user.forEach(user=>{ %>
        <table>
            <tr>
                <td>Name</td>
                <td>Role</td>
                <td>Faculty</td>
                <td>Created At</td>
            </tr>
            <tr>
                <td><a href="/admin/user/<%= user._id %>">
                        <%= user.name %>
                    </a>
                </td>
                <td><%= user.role %></td>
                <td><% if(user.faculty) { %>
                    <%= user.faculty.name %>
                <% } %>
                </td>
                <td>user.createdAt</td>
            </tr>

        </table>
    <% }) %>
</div>

</body>
</html>


