                    </div>
                </li>
                <li> <a href="/admin/logout">logout </a> </li>
            </ul>
        </div>
    </nav>

    <section class="centered-search">
        <h3>Search User</h3>
        <form action="/admin/user" method="GET">
            <div class="search-css">
                <input type="text" name="name" value="<%= searchOptions.name %>">
            </div>
            <button class="btn btn-full" type="submit">Search</button>
            <a class="btn btn-full" href="/admin/user/new">Add New User</a>
        </form>
    </section>
          
    <div style="overflow-x:auto;">
        <table class="content-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Account</th>
                    <th>Role</th>
                    <th>Falcuty</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <% user.forEach(user=>{ %>
            <tbody>
                <tr>
                    <td style="text-align: center;">
                        <a class="btn" href="/admin/user/<%= user._id %>">
                            <%= user.name %>
                        </a>
                    </td>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <%= user.role %>
                    </td>
                    <td>
                        <% if(user.faculty) { %>
                            <%= user.faculty.name %>
                        <% } %>
                    </td>
                    <td>
                        <%= user.createdAt.toISOString().split('T')[0] %>
                    </td>
                </tr>
            </tbody>
            <% }) %>
        </table>
    </div>
    
        <footer>
