<section>
    <div style="overflow: auto;">
        <h2>Your Article</h2>

        <div class="p-5 mt-5">
            <div>
                <div class="filter">
                    <a class="btn btn-search" href="/student/newarticle">New </a>

                    <label style="padding: 10px 2px 2px;margin-left: 40%;">
                            <b> Status: </b>
                        </label>
                    <form style="display: inline-flex;" action="/student/poster" method="POST">
                        <select name="status">

                    <% if (!status || status==='all' ) { %>
                        <option selected value="all">All</option>
                    <% } else { %>
                        <option value="all">All</option>
                    <% } %>
        
                    <% if (status && status==='pending' ) { %>
                        <option selected value="pending">Pending</option>
                    <% } else { %>
                        <option value="pending">Pending</option>
                    <% } %>
        
                    <% if (status && status==='accepted' ) { %>
                        <option selected value="accepted">Accepted</option>
                    <% } else { %>
                        <option value="accepted">Accepted</option>
                    <% } %>
        
                    <% if (status && status==='rejected' ) { %>
                        <option selected value="rejected">Rejected</option>
                    <% } else { %>
                        <option value="rejected">Rejected</option>
                    <% } %>
                </select>
                        <button class="btn btn-search" type="submit">Submit</button>
                    </form>

                </div>
                <div class="search-std">
                    <form style="display: inline-flex;" action="/student/poster" method="GET">
                        <input value="<%= searchOptions.name %>" name="name" type="text" placeholder="Search Article...">
                        <button class="btn btn-search" type="submit">Search</button>
                    </form>
                </div>
            </div>


            <table class="table-std content-table">
                <thead>
                    <tr>
                        <th class="table-id">Cover</th>
                        <th class="table-name">Name</th>
                        <th>Status</th>
                        <th style="padding-left: 4%;">Create At</th>
                        <th style="padding-left: 10%;">Option</th>
                    </tr>
                </thead>
                <% articles.forEach(article=>{ %>

                    <tbody>
                        <tr>
                            <td><img height="150" width="100" src="<%= article.coverImagePath %>"></td>
                            <td>

                                <%= article.name %>

                            </td>
                            <td>
                                <%= article.status %>
                            </td>
                            <td style="padding-left: 4%;">
                                <%= article.createdAt.toISOString().split('T')[0] %>
                            </td>
                            <td class="p-2">
                                <div style="display: inline-flex;">
                                    <button class="btn btn-ghost mgl5">
                                        <a href="/student/poster/<%= article._id %>">View</a>
    
                                        </button>
                                    <button class="btn btn-ghost mgl5">
                                        <a href="/student/poster/<%= article._id %>/edit">Edit</a>
                                            
                                        </button>
                                    <a class="mgl5">
                                        <%- include('../partials/deleteForm', {url: `/student/poster/${article._id}`}) %>
                                    </a>
                                    <form action="/student/article/download/<%= article._id %>" method="GET">

                                        <!-- <input type="submit" value="Download"> -->
                                        <button class="btn btn-full mgl5">Download</button>
                                    </form>
                                </div>


                            </td>
                        </tr>
                    </tbody>
                    <% }) %>
            </table>

        </div>
    </div>

</section>

