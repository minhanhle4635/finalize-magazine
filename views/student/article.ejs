<section>
    <div style="overflow: auto;">
        <h2>All Article</h2>
        <div class="p-5 mt-5">
            <div style="padding-bottom: 3%;">
                <form action="/student/article" method="GET">
                    <div class="search-std">
                        <input type="text" name="name" value="<%= searchOptions.name %>" placeholder="Search Article...">
                        <button style="margin-left: 5px;" class="btn btn-search" type="submit">Search</button>
                    </div>
                </form>
            </div>

            <div>
                <table class="table-std content-table">
                    <thead>
                        <tr>
                            <th class="table-id">Cover</th>
                            <th class="table-name">Name</th>
                            <th>Author</th>
                            <th class="">Option</th>
                        </tr>
                    </thead>
                    <% articles.forEach(article=>{ %>
                        <tbody>
                            <tr>
                                <td><img height="150" width="100" src="<%= article.coverImagePath %>"></td>
                                <td>
                                    <%= article.name %>
                                </td>
                                <td>
                                    <%= article.author%>
                                </td>
                                <td class="">
                                    <div style="display: inline-flex;">
                                        <button class="btn btn-ghost"><a href="/student/article/<%= article._id %>">View</a></button>

                                        <form action="/student/article/download/<%= article._id %>" method="GET">

                                            <button class="btn btn-full mgl5">Download</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <% }) %>

                </table>
            </div>
        </div>
    </div>
</section>



