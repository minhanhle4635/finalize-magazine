<section>
    <h2>All Article</h2>
    <form class="p-2" action="/student/article" method="GET">
        <div>
            <h3>Search article</h3>
            <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
        <button class="btn btn-full" type="submit">Search</button>
    </form>

    <br>

    <div>
        <table class="table content-table">
            <thead>
                <tr>
                    <th class="table-id">Cover</th>
                    <th class="table-name">Name</th>
                    <th>Author</th>
                    <th class="p-2">Option</th>
                </tr>
            </thead>
            <% articles.forEach(article=>{ %>
                <tbody>
                    <tr>
                        <td><img height="150" width="100" src="<%= article.coverImagePath %>"></td>
                        <td>
                            <%= article.name %>
                        </td>
                        <td>
                            <%= article.status %>
                        </td>
                        <td class="p-2">
                            <form action="/student/article/download/<%= article._id %>" method="GET">
                                <input type="submit" value="Download">
                            </form>
                            <br>
                            <a class="btn btn-ghost" href="/student/article/<%= article._id %>">View</a>
                        </td>
                    </tr>
                </tbody>
                <% }) %>
        </table>
    </div>

</section>

