<section class="p-5">
    <h2>Edit Topic</h2>
    <form action="/coordinator/topic/<%= topic.id %>/edit?_method=PUT" method="POST">
        <div class="p-3">
            <label class="strong">Name of topic: </label>
            <input type="next" name="name" value="<%= topic.name %>">
        </div>
        <div class="p-3">
            <label class="strong">Expired Date: </label>
            <input type="date" name="expiredDate">
        </div>
        <div class="p-3">
            <label for="finalExpiredDate" class="strong">Final Expired Date</label>
            <input type="date" id="finalExpiredDate" name="finalExpiredDate">
        </div>
        <div class="p-3">
            <label class="strong">Description : </label>
            <textarea name="description" class="p-1"><%= topic.description %></textarea>
        </div>

        <button type="submit" class="btn btn-success">Update</button>
        <a href="/coordinator/topic/:id">Cancel</a>
    </form>
</section>
