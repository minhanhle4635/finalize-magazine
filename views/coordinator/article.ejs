<section class="centered-search">
    <h3>Search Topic</h3>
    <form action="/coordinator/article" method="GET">
        <div class="search-css">
            <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
        <button class="btn btn-full" type="submit">Search</button>
    </form>
</section>

<div class="p-5">
    <% articles.forEach(article=>{ %>
        <form action="/coordinator/article" method="POST">
            <input type="text" hidden name="articleId" value="<%= article._id %>">
            <table class="table">
                <thead>
                    <tr>
                        <th class="table-id">Cover</th>
                        <th></th>
                        <th class="table-name">Name</th>
                        <th>Comment</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tr>
                    <td><img height="150" width="100" src="<%= article.coverImagePath %>"></td>
                    <td></td>
                    <td><a href="/coordinator/article/<%= article._id %>">
                            <%= article.name %>
                        </a>
                    </td>
                    <td>
                        <form action="/coordinator/article" method="POST">
                            <textarea name="comment"><%= article.comment %></textarea>
                            <p>
                                <button type="submit" name="permission" value="accept"
                                    class="btn btn-success">Accept</button>
                                <button type="submit" name="permission" value="refuse"
                                    class="btn btn-danger">Refuse</button>
                            </p>

                        </form>
                    </td>
                    <td>
                        <form style="display: inline-block;" action="/coordinator/article/download/<%= article._id %>" method="GET">

                            <!-- <input type="submit" value="Download"> -->
                            <button class="btn btn-full mgl5" type="submit">Download</button>
                        </form>
                    </td>
                </tr>
            </table>
        </form>
        <% }) %>
</div>
