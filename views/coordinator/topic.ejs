<section class="centered-search">
    <h3>Search Topic</h3>
    <form action="/coordinator/topic" method="GET">
        <div class="search-css">
            <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
        <button class="btn btn-full" type="submit">Search</button>
    </form>
</section>


<div class="p-5 mt-5 mb-5">
    <table class="table border">
        
        <thead>
            <tr><button class="btn btn-warning"><a href="/coordinator/topic/new" class="text-white">New Topic</a></button></tr>

            <tr class="text-center text-white">
                <th class="table-name">Name</th>
                <th class="table-date">Expired Date</th>
                <th class="table-number">Final Expired Date</th>
            </tr>
        </thead>
        <% topics.forEach(topic=>{ %>
        <tbody>
            <tr class="text-center">
                <td><a href="/coordinator/topic/<%= topic.id %>">
                    <%= topic.name %>
                </a></td>
                <td><%= topic.expiredDate==null ? '' : topic.expiredDate.toISOString().split('T')[0] %></td>
                <td> <%= topic.finalExpiredDate==null ? '': topic.finalExpiredDate.toISOString().split('T')[0] %></td>
            </tr>
        </tbody>
        <% }) %>
    </table>
</div>
