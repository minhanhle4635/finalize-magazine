<div class="card">
    <h2>
        <%= profile.fullName %>
    </h2>

    <div class="p-5"> <img class="border" width="150" height="200"
            src="<%= '/coordinator/profile/' + profile._id + '/avatar' %>">
    </div>
    <table class="table-card">
        <tr>
            <th class="pb-3">Gender: </th>
            <td class="pb-3">
                <%= profile.gender==null ? 'None' : profile.gender %>
            </td>
        </tr>

        <tr>
            <th class="pb-3">Date of Birth: </th>
            <td class="pb-3">
                <%= profile.dob==null ? '' : profile.dob.toISOString().split('T')[0]%>
            </td>
        </tr>
        <tr>
            <th class="pb-3">Email: </th>
            <td class="pb-3">
                <%= profile.email %>
            </td>
        </tr>
        <tr>
            <th class="pb-3">Introduction: </th>
            <td class="pb-3">
                <%= profile.introduction %>
            </td>
        </tr>
    </table>
    <button class="btn btn-warning pb-2"> <a href="/coordinator/profile/<%= profile.id %>/edit" class="text-white">Edit profile</a>
    </button>
    <button class="btn btn-warning"><a href="/coordinator/profile/<%= profile.id %>/changepassword" class="text-white">Change
            Password</a></button>
</div>
