<header class="header-img">
    <nav class="sticky">
        <img src="resources/img/logo.jpg" alt="missing picture" class="logo">
        <ul class="main-nav">
            <li> <a href="/coordinator/profile/<%= profile.id %>"><%= profile.fullName %></a></li>
            <li> <a href="/coordinator/topic">Topic </a> </li>
            <li> <a href="/coordinator/allArticle">Article </a> </li>
            <li> <a href="/coordinator/logout">Sign Out </a> </li>
        </ul>
    </nav>
    <div class="header-text-box">
        <h1>
            Welcome, Coordinator :<%= user.name %>
        </h1>
        <h2 class="text-white">Faculty assigned :<%= user.faculty.name %>
        </h2>
    </div>
</header>
<div>
    <form class="p-5 ">
        <h2>Job status</h2>
        <table class="table p-5 border">
            <thead class="strong">
                <tr>
                    <td>Total Article: </td>
                    <td>Pending Article:</td>
                    <td>Rejected Article:</td>
                    <td>Accepted Article:</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= totalArticle %>
                    </td>
                    <td>
                        <%= allPendingArticle %>
                    </td>
                    <td>
                        <%= allRejectedArticle %>
                    </td>
                    <td>
                        <%= allAcceptedArticle %>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>


    <div class="p-5">
        <h2>Recently Added</h2>
        <% articles.forEach(article=>{ %>
            <form action="/coordinator/article" method="POST">
                <input type="text" hidden name="articleId" value="<%= article._id %>">
                <table class="table border">
                    <thead>
                        <tr>
                            <th class="table-id">Cover</th>
                            <th class="table-name">Name</th>
                            <th>Comment</th>
                        </tr>
                    </thead>
                    <tr>
                        <td><img height="150" width="100" src="<%= article.coverImagePath %>"></td>
                        <td><a href="/coordinator/article/<%= article._id %>">
                                <%= article.name %>
                            </a>
                        </td>
                        <td>
                            <form action="/coordinator/article" method="POST">
                                <textarea name="comment"><%= article.comment %></textarea>
                                <p>
                                    <button type="submit" name="permission" value="accept" class="btn btn-success">Accept</button>
                                    <button type="submit" name="permission" value="refuse" class="btn btn-danger">Refuse</button>
                                </p>

                            </form>
                        </td>
                    </tr>
                </table>
            </form>
            <% }) %>
    </div>
    <footer>
        <div class="row">
            <div class="col span-1-of-2">
                <ul class="nav-footer">
                    <li> <a href="#">about us</a> </li>
                    <li> <a href="#">blog</a> </li>
                    <li> <a href="#">Press</a> </li>
                    <li> <a href="#">IOS app</a> </li>
                    <li> <a href="#">ANDROID app</a> </li>
                </ul>
            </div>
            <div class="col span-1-of-2">
                <ul class="social-link-footer">
                    <li>
                        <a href="#"> <i class="ion-logo-facebook"></i> </a>
                    </li>
                    <li>
                        <a href="#"> <i class="ion-logo-twitter"></i> </a>
                    </li>
                    <li>
                        <a href="#"> <i class="ion-logo-googleplus"></i> </a>
                    </li>
                    <li>
                        <a href="#"> <i class="ion-logo-instagram"></i> </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <p>
                Copyrighted &copy; 2020 by Unipara all rights reversed
            </p>
        </div>
    </footer>