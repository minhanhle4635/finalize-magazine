<div class="row">
    <form method="post" action="/coordinator/profile/<%= profile.id %>/changepassword?_method=PUT" class="signup-form">
        <div class="log-border">
            <h2>Change Password</h2>
            <div class="row">
                <div class="col span-1-of-3">
                    <label for="username">Username: <%= user.username %></label>
                </div>
            </div>
            <div class="row">
                <div class="col span-1-of-3">
                    <label for="">Password</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="password" name="password" id="password" placeholder="Enter your password" required>
                </div>
            </div>
            <div class="row">
                <div class="col span-1-of-3">
                    <label for="">Verify Password</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="password" name="verifyPassword" id="verifyPassword" placeholder="Verify your password" required>
                </div>
            </div>
            
            <div class="row">
                <div class="col span-1-of-3">
                    <button type="submit">Change Password</button>
                </div>

                <div class="col span-1-of-3">
                    <a class="btn btn-full" href="/coordinator/profile/<%= profile.id %>">Cancel</a>
                </div>
            </div>
        </div>      
</form>

</div>

